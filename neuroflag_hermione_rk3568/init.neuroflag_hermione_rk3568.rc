on zygote-start
    mkdir /data/rondata 0777 system system
    # For UART
    chmod 0666 /dev/ttyS9

service rondriver /vendor/bin/ron-driver-server
    user system
    group system media_rw
    seclabel u:r:su:s0
    stdio_to_kmsg
    setenv RON_DRIVER_DATA_DIR /data/rondata

on property:rondriver.enabled=1 
    start rondriver

on property:rondriver.enabled=0
    stop rondriver
